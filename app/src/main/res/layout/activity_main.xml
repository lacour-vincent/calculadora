<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_activity_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:titleTextAppearance="@style/AppTheme.Toolbar.Title"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="2.2+2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_main" android:textAlignment="textEnd"
            android:textSize="36sp" android:id="@+id/textview_screen"/>


    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:text="%"
            android:id="@+id/button_percentage"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline_left"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorLightWhite" android:textColor="@color/colorLightBlack"
            android:textSize="30sp" android:fontFamily="sans-serif"/>

    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_zero" app:layout_constraintStart_toEndOf="@+id/button_percentage"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLightWhite"
            android:textColor="@color/colorLightBlack" android:textSize="30sp"
            android:fontFamily="sans-serif"/>

    <Button
            android:text="."
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_comma" app:layout_constraintStart_toEndOf="@+id/button_zero"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLightWhite"
            android:textColor="@color/colorLightBlack" android:textSize="30sp"
            android:fontFamily="sans-serif"/>

    <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_one"
            app:layout_constraintBottom_toTopOf="@+id/button_percentage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_left"
            android:textColor="@color/colorLightBlack" android:background="@color/colorLightWhite"
            android:textSize="30sp" android:fontFamily="sans-serif"/>
    <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_two"
            app:layout_constraintBottom_toTopOf="@+id/button_zero" app:layout_constraintStart_toEndOf="@+id/button_one"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            android:textColor="@color/colorLightBlack" android:background="@color/colorLightWhite"
            android:textSize="30sp" android:fontFamily="sans-serif"/>
    <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_three"
            app:layout_constraintBottom_toTopOf="@+id/button_comma" app:layout_constraintStart_toEndOf="@+id/button_two"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            android:textColor="@color/colorLightBlack" android:background="@color/colorLightWhite"
            android:textSize="30sp" android:fontFamily="sans-serif"/>
    <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_equal" app:layout_constraintStart_toEndOf="@+id/button_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_three" android:background="@color/colorBlue"
            android:textColor="@color/colorWhite" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_four" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_left"
            app:layout_constraintBottom_toTopOf="@+id/button_one" android:textColor="@color/colorLightBlack"
            android:background="@color/colorLightWhite" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_five" app:layout_constraintStart_toEndOf="@+id/button_four"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            app:layout_constraintBottom_toTopOf="@+id/button_two" android:textColor="@color/colorLightBlack"
            android:background="@color/colorLightWhite" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_six"
            app:layout_constraintBottom_toTopOf="@+id/button_three"
            app:layout_constraintStart_toEndOf="@+id/button_five"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right" android:textColor="@color/colorLightBlack"
            android:background="@color/colorLightWhite" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_add" app:layout_constraintStart_toEndOf="@+id/button_six"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_equal" android:background="@color/colorWhiteSmock"
            android:textColor="@color/colorBlue" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_seven"
            app:layout_constraintBottom_toTopOf="@+id/button_four" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_left"
            android:textColor="@color/colorLightBlack" android:background="@color/colorLightWhite"
            android:textSize="30sp" android:fontFamily="sans-serif"/>
    <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_eight" app:layout_constraintStart_toEndOf="@+id/button_seven"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            app:layout_constraintBottom_toTopOf="@+id/button_five" android:textColor="@color/colorLightBlack"
            android:background="@color/colorLightWhite" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_nine"
            app:layout_constraintBottom_toTopOf="@+id/button_six" app:layout_constraintStart_toEndOf="@+id/button_eight"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            android:textColor="@color/colorLightBlack" android:background="@color/colorLightWhite"
            android:textSize="30sp" android:fontFamily="sans-serif"/>
    <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_minus" app:layout_constraintStart_toEndOf="@+id/button_nine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_add" android:background="@color/colorWhiteSmock"
            android:textColor="@color/colorBlue" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_clear" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_seven"
            app:layout_constraintEnd_toStartOf="@+id/guideline_left" android:background="@color/colorWhiteSmock"
            android:textColor="@color/colorBlue" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="รท"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_divide" app:layout_constraintStart_toEndOf="@+id/button_clear"
            app:layout_constraintBottom_toTopOf="@+id/button_eight"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center" android:background="@color/colorWhiteSmock"
            android:textColor="@color/colorBlue" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="ร"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_multiply" app:layout_constraintStart_toEndOf="@+id/button_divide"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintBottom_toTopOf="@+id/button_nine" android:background="@color/colorWhiteSmock"
            android:textColor="@color/colorBlue" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="DEL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/button_delete" app:layout_constraintStart_toEndOf="@+id/button_multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_minus" android:background="@color/colorWhiteSmock"
            android:textColor="@color/colorBlue" android:textSize="30sp"
            android:fontFamily="sans-serif"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline_left"
            app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline_center"
            app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_right" app:layout_constraintGuide_percent="0.75"/>


</android.support.constraint.ConstraintLayout>